{
  "name": "@kovalyoff/obsidian-notes-mcp",
  "version": "2.0.0",
  "description": "MCP plugin for Obsidian - Context7-style architecture for local notes",
  "main": "main.js",
  "type": "module",
  "bin": {
    "obsidian-mcp": "dist/mcp_server.js"
  },
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "build:mcp": "tsc && chmod 755 dist/mcp_server.js",
    "start:mcp": "node dist/mcp_server.js --transport stdio",
    "start:mcp-http": "node dist/mcp_server.js --transport http --port 3030",
    "bench": "node bench/run-bench.mjs",
    "bench:graph": "node bench/run-graph-smoke.mjs",
    "bench:capture": "node bench/run-capture-smoke.mjs",
    "bench:semantic": "node bench/run-semantic-smoke.mjs",
    "version": "node version-bump.mjs && git add manifest.json versions.json"
  },
  "keywords": [
    "obsidian",
    "mcp",
    "model-context-protocol",
    "context7",
    "notes",
    "search"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.19.41",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "@xenova/transformers": "^2.17.2",
    "builtin-modules": "3.3.0",
    "esbuild": "0.17.3",
    "obsidian": "latest",
    "tslib": "2.4.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "commander": "^14.0.0",
    "fuse.js": "^7.1.0",
    "zod": "^3.25.76"
  }
}
